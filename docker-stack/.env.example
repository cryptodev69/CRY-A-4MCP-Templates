# CRY-A-4MCP Docker Stack Environment Configuration
# Copy this file to .env and customize the values

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=cry-a-4mcp
ENVIRONMENT=development
LOG_LEVEL=INFO

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Change these passwords in production!
NEO4J_PASSWORD=cry-a-4mcp-password
N8N_BASIC_AUTH_USER=cryptodev69+shared@gmail.com
N8N_BASIC_AUTH_PASSWORD=Apeundercla$$##1
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=cry-a-4mcp-admin

# API Keys (optional - add your own)
COINMARKETCAP_API_KEY=
COINGECKO_API_KEY=
TWITTER_API_KEY=
TWITTER_API_SECRET=

# =============================================================================
# SERVICE PORTS & URLS
# =============================================================================
# URL for your remote n8n instance
CRYA4MCP_N8N_URL=flow.cspy.io

# Qdrant Vector Database
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# Neo4j Knowledge Graph
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# n8n Workflow Automation
N8N_PORT=5678

# Redis Cache
REDIS_PORT=6379

# CRY-A-4MCP Server
SERVER_PORT=8000

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# =============================================================================
# RESOURCE LIMITS
# =============================================================================
# Neo4j Memory Configuration
NEO4J_HEAP_INITIAL=512m
NEO4J_HEAP_MAX=2G
NEO4J_PAGECACHE=1G

# =============================================================================
# DATA PERSISTENCE
# =============================================================================
# Set to 'true' to persist data between container restarts
PERSIST_DATA=true

# Data directory for host mounts (if not using Docker volumes)
DATA_DIR=./data

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug mode for development
DEBUG_MODE=false

# Enable hot reload for development
HOT_RELOAD=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# SSL/TLS Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# External URLs (for production deployment)
EXTERNAL_URL=http://localhost
WEBHOOK_URL=http://localhost:5678

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

