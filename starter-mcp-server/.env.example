# Database Configuration
DATABASE_URL=sqlite:///./url_mappings.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/url_mappings
# For MySQL: DATABASE_URL=mysql+pymysql://user:password@localhost:3306/url_mappings

# Enable SQL query logging (for development)
SQL_DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=*
# For production, specify exact origins: ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Security Configuration (optional)
# TRUSTED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Metrics Configuration
ENABLE_METRICS=true
METRICS_PORT=8001

# Application Environment
ENVIRONMENT=development
# Options: development, staging, production

# Logging Configuration
LOG_FORMAT=json
# Options: json, text

LOG_FILE=logs/url_mapping_service.log
# Leave empty to disable file logging

# Rate Limiting (if implemented)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Cache Configuration (if implemented)
CACHE_ENABLED=false
CACHE_TTL_SECONDS=300
REDIS_URL=redis://localhost:6379/0

# External Service URLs (for validation)
# URL_CONFIG_SERVICE_URL=http://localhost:8001/api/url-configurations
# EXTRACTOR_SERVICE_URL=http://localhost:8002/api/extractors

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5

# Database Pool Configuration (for production)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups/url_mappings