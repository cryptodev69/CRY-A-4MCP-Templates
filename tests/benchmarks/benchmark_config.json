{
  "providers": [
    {
      "name": "openai",
      "models": ["gpt-3.5-turbo", "gpt-4", "gpt-4-turbo"]
    },
    {
      "name": "anthropic",
      "models": ["claude-2", "claude-instant-1"]
    },
    {
      "name": "openrouter",
      "models": [
        "anthropic/claude-3-opus:20240229",
        "anthropic/claude-3-sonnet:20240229",
        "anthropic/claude-3-haiku:20240307",
        "google/gemini-1.5-pro:latest",
        "mistralai/mistral-large:latest",
        "meta-llama/llama-3-70b-instruct:latest"
      ]
    }
  ],
  "test_scenarios": [
    {
      "name": "crypto_news",
      "description": "Cryptocurrency news articles",
      "sample_file": "../samples/crypto_news.txt",
      "expected_fields": ["headline", "summary", "sentiment", "category", "market_impact", "key_entities"]
    },
    {
      "name": "social_media",
      "description": "Social media posts about cryptocurrency",
      "sample_file": "../samples/social_media.txt",
      "expected_fields": ["headline", "summary", "sentiment", "key_entities", "urgency_score"]
    },
    {
      "name": "html_content",
      "description": "HTML content with tables and formatting",
      "sample_file": "../samples/html_content.html",
      "expected_fields": ["headline", "summary", "sentiment", "category", "market_impact", "key_entities", "tables"]
    },
    {
      "name": "mixed_content",
      "description": "Mixed content types in a single document",
      "sample_file": "../samples/mixed_content.txt",
      "expected_fields": ["headline", "summary", "sentiment", "category", "market_impact", "key_entities"]
    },
    {
      "name": "long_content",
      "description": "Very long content requiring segmentation",
      "sample_file": "../samples/long_content.txt",
      "expected_fields": ["headline", "summary", "sentiment", "category", "market_impact", "key_entities"]
    }
  ],
  "metrics": [
    {
      "name": "extraction_time",
      "description": "Time taken to complete extraction",
      "unit": "seconds"
    },
    {
      "name": "token_usage",
      "description": "Number of tokens used for extraction",
      "unit": "tokens"
    },
    {
      "name": "estimated_cost",
      "description": "Estimated cost of extraction",
      "unit": "USD"
    },
    {
      "name": "extraction_quality",
      "description": "Quality score of extraction result",
      "unit": "score",
      "min": 0,
      "max": 100
    },
    {
      "name": "field_completeness",
      "description": "Percentage of expected fields present in result",
      "unit": "percentage",
      "min": 0,
      "max": 100
    }
  ],
  "benchmark_settings": {
    "runs_per_scenario": 3,
    "timeout_seconds": 120,
    "output_directory": "./results",
    "save_raw_results": true,
    "generate_report": true
  }
}