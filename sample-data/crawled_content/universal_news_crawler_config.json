    "ai_processing_pipeline": {
      "content_classification": {
        "breaking_news": "urgency_keywords + publication_time",
        "market_analysis": "technical_indicators + price_mentions",
        "regulatory": "government_entities + policy_keywords",
        "institutional": "company_names + investment_amounts",
        "technical": "protocol_names + development_terms"
      },
      
      "persona_routing": {
        "meme_snipers": {
          "keywords": ["viral", "moonshot", "100x", "gem", "launch", "trending"],
          "sources_priority": ["social_sentiment", "new_listings", "volume_spikes"],
          "urgency": "high"
        },
        "gem_hunters": {
          "keywords": ["fundamental", "development", "partnership", "adoption", "utility"],
          "sources_priority": ["research_reports", "technical_analysis", "project_updates"],
          "urgency": "medium"
        },
        "legacy_investors": {
          "keywords": ["institutional", "regulation", "macro", "etf", "adoption"],
          "sources_priority": ["regulatory_news", "institutional_moves", "macro_data"],
          "urgency": "low"
        }
      },

      "quality_scoring": {
        "source_credibility": "tier_1: 1.0, tier_2: 0.8, aggregators: 0.6",
        "content_depth": "word_count + technical_terms + data_citations",
        "timeliness": "publication_age_penalty",
        "uniqueness": "duplicate_detection_score"
      }
    },

    "crawl4ai_configuration": {
      "concurrent_crawlers": 20,
      "rate_limiting": {
        "tier_1_sources": "30_requests_per_minute",
        "tier_2_sources": "20_requests_per_minute", 
        "api_sources": "varies_by_provider"
      },
      "content_extraction": {
        "article_text": "main_content_selector",
        "publish_date": "time_element_extraction",
        "author": "byline_extraction",
        "tags": "category_classification",
        "sentiment": "ai_sentiment_analysis"
      },
      "storage_format": {
        "raw_content": "full_html",
        "processed_content": "clean_text + metadata",
        "ai_analysis": "sentiment + classification + routing"
      }
    },

    "monitoring_alerts": {
      "breaking_news": "immediate_notification",
      "fed_announcements": "high_priority_alert",
      "major_partnerships": "medium_priority_alert",
      "market_indicators_extreme": "immediate_notification"
    }
  }
